{
	"compilerOptions": {
		"types": ["node", "react", "react-dom"],
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"jsx": "react-jsx",
		"declaration": true,
		"outDir": "dist",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true
	},
	"include": ["src", "scripts", "tsup.config.ts"]
}
